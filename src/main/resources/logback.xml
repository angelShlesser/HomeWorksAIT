<configuration>

    <!-- Консольный аппендер для INFO -->
    <appender name="STDOUT_INFO" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Консольный аппендер для ERROR -->
    <appender name="STDOUT_ERROR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Аппендер для записи в файл -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Путь к файлу лога -->
        <file>./logs/app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

        <!-- Политика ротации файлов: ежедневно -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Добавлена дата к имени архивного файла -->
            <fileNamePattern>./logs/archived/app-%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Уровни логирования и ассоциированные аппендеры -->
    <root level="INFO">
        <appender-ref ref="STDOUT_INFO"/>
    </root>

    <!-- Уровень ERROR и ассоциированный аппендер -->
    <logger name="com.example.yourpackage" level="ERROR">
        <appender-ref ref="STDOUT_ERROR"/>
    </logger>

</configuration>